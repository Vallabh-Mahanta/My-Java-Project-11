<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ProcessSchedulerController">
    <VBox spacing="10" alignment="center" padding="10">
        <HBox spacing="10" alignment="center">
            <Button text="Add Process" onAction="#handleAddProcess"/>
            <Button text="Schedule FCFS" onAction="#handleScheduleFCFS"/>
            <Button text="Schedule Round Robin" onAction="#handleScheduleRoundRobin"/>
            <Button text="Schedule Priority" onAction="#handleSchedulePriority"/>
            <Button text="Schedule SJF" onAction="#handleScheduleSJF"/>
        </HBox>
        <TextArea fx:id="processOutput" prefHeight="400" prefWidth="600"/>
    </VBox>
</AnchorPane>
